{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@app/*": ["src/book_invoicing/*"] // resolve all modules prefixed with `@/` from `src` directory
    },
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
    "target": "es6",
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "./src/**/*", "./test/**/*"
  ]
}
